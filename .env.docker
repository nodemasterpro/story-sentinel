# =============================================================================
# Story Sentinel Docker Configuration
# =============================================================================
# Copy this file to .env and customize for your setup

# =============================================================================
# REQUIRED: Story Node Connection
# =============================================================================
# Your Story node RPC endpoint (replace with your node's IP/port)
SENTINEL_STORY_RPC=http://10.0.0.100:22657
SENTINEL_STORY_GETH_RPC=http://10.0.0.100:2245

# Alternative: if running on the same host as your node
# SENTINEL_STORY_RPC=http://host.docker.internal:22657
# SENTINEL_STORY_GETH_RPC=http://host.docker.internal:2245

# =============================================================================
# REQUIRED: Alerts Configuration (choose at least one)
# =============================================================================
# Discord webhook URL for notifications
DISCORD_WEBHOOK=

# Telegram bot configuration
TG_BOT_TOKEN=
TG_CHAT_ID=

# =============================================================================
# Node Configuration Override (optional - auto-detected if not set)
# =============================================================================
# Service names (auto-detected: story-node, geth-node, story, story-geth)
SENTINEL_STORY_SERVICE=
SENTINEL_GETH_SERVICE=

# Binary paths (auto-detected)
SENTINEL_STORY_BINARY=
SENTINEL_GETH_BINARY=

# Story home directory (auto-detected)
STORY_HOME=

# =============================================================================
# Operation Mode
# =============================================================================
# Operation mode: 'manual' (default) or 'auto' for automatic patch updates
MODE=manual

# =============================================================================
# Health Monitoring Thresholds (optional)
# =============================================================================
# Block height difference threshold
SENTINEL_HEIGHT_GAP=20

# Minimum peer count
SENTINEL_MIN_PEERS=5

# Block time variance in seconds
SENTINEL_BLOCK_TIME_VARIANCE=10

# Memory limit in GB
SENTINEL_MEMORY_LIMIT_GB=8.0

# Minimum disk space in GB
SENTINEL_DISK_SPACE_MIN_GB=10.0

# =============================================================================
# Monitoring Intervals (optional)
# =============================================================================
# Health check interval in seconds
SENTINEL_CHECK_INTERVAL=300

# Update check interval in seconds
SENTINEL_UPDATE_CHECK_INTERVAL=3600

# =============================================================================
# API Configuration (optional)
# =============================================================================
# API server port
SENTINEL_API_PORT=8080

# API server host
SENTINEL_API_HOST=0.0.0.0

# =============================================================================
# Calendar Integration (optional)
# =============================================================================
# Calendar name for ICS exports
SENTINEL_CALENDAR_NAME=Story Sentinel Upgrades

# =============================================================================
# Logging (optional)
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
SENTINEL_LOG_LEVEL=INFO

# =============================================================================
# GitHub API (optional - for rate limiting)
# =============================================================================
# GitHub token for higher API rate limits (optional)
GITHUB_TOKEN=